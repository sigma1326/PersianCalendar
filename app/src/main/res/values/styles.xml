<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />


    <style name="customTheme" parent="AppTheme">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:focusable">true</item>
        <item name="android:clickable">true</item>
        <item name="android:fitsSystemWindows">true</item>
    </style>


    <style name="edittext_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
        <item name="android:gravity">start|center_horizontal</item>
    </style>

    <style name="month_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/month_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="day_item_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">22sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="year_title_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/year_title_text_size</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="day_number_style">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/month_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="day_number_selected_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/day_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="full_day_name_style">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">@dimen/month_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="date_formal_style">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">14sp</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">ltr</item>
        <item name="android:textAlignment">center</item>
    </style>

    <style name="day_name_style">
        <item name="android:textColor">@color/day_name_color</item>
        <item name="android:textSize">@dimen/day_title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
        <item name="android:fontFamily">@font/iransans</item>
        <item name="android:textDirection">anyRtl</item>
        <item name="android:layoutDirection">rtl</item>
        <item name="android:textAlignment">center</item>
    </style>


    <style name="iransans">
        <item name="android:fontFamily">@font/iransans</item>
    </style>

    <dimen name="month_title_text_size">16sp</dimen>
    <dimen name="day_title_text_size">16sp</dimen>
    <dimen name="year_title_text_size">14sp</dimen>
</resources>
